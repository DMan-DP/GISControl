<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:styles="clr-namespace:GISControl.View.Styles"
                    xmlns:styles1="clr-namespace:GISControl.View.Styles"
                    x:Class="GISControl.View.Styles.Style">

    <Style x:Key="Window" TargetType="{x:Type Window}">
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="AllowsTransparency" Value="true" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="ResizeMode" Value="CanResizeWithGrip" />
        <Setter Property="MinWidth" Value="640" />
        <Setter Property="MinHeight" Value="480" />
        <Setter Property="Foreground" Value="{StaticResource TextColor}"/>

        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome
                    NonClientFrameEdges="None"
                    GlassFrameThickness="0"
                    ResizeBorderThickness="8"
                    CaptionHeight="28" />
            </Setter.Value>
        </Setter>
        <EventSetter Event="Loaded" Handler="WindowLoaded" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Window}">
                    <Border x:Name="Container">
                        <Grid
                            TextOptions.TextRenderingMode="ClearType"
                            TextOptions.TextFormattingMode="Display">
                            <Border
                                x:Name="Border"
                                Width="Auto"
                                Height="Auto"
                                Background="{StaticResource SecondaryColor}"
                                BorderBrush="{StaticResource AccentColor}"
                                BorderThickness="1">
                                <ContentPresenter/>
                            </Border>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="WindowState" Value="Normal">
                            <Setter TargetName="Border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect
                                        Color="#7BA5AD"
                                        RenderingBias="Performance"
                                        BlurRadius="8"
                                        Opacity="0.75"
                                        Direction="-90"
                                        ShadowDepth="1" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsActive" Value="False">
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource SecondaryAccentColor}"/>
                            <Setter TargetName="Border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect
                                        Color="#45494A"
                                        RenderingBias="Performance"
                                        BlurRadius="8"
                                        Opacity="0.75"
                                        Direction="-90"
                                        ShadowDepth="1"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                       
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Resources>
            <Style TargetType="{x:Type StatusBar}">
                <Setter Property="FontFamily" Value="Roboto" />
                <Setter Property="Foreground" Value="{StaticResource TextColor}" />
                <Setter Property="Background" Value="{StaticResource AccentColor}" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsActive, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                        <Setter Property="Background" Value="{StaticResource PrimaryColor}" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
            <Style TargetType="{x:Type ResizeGrip}">
                <Setter Property="WindowChrome.ResizeGripDirection" Value="BottomRight" />
            </Style>
            <Image x:Key="DeleteIcon" Source="../../Resources/Image/delete.png" Width="24" Stretch="Fill"/>
        </Style.Resources>
    </Style>

    <Style x:Key="MainWindow" BasedOn="{StaticResource Window}" TargetType="{x:Type Window}">
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome
                    NonClientFrameEdges="None"
                    GlassFrameThickness="0"
                    ResizeBorderThickness="8"
                    CaptionHeight="8"/>
            </Setter.Value>
        </Setter>
    </Style>

